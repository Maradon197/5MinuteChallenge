<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="2dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_lg" />
            <solid android:color="#1A000000" />
        </shape>
    </item>
    
    <!-- Card Background -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_lg" />
            <solid android:color="@color/card_background_elevated" />
            <stroke
                android:width="1dp"
                android:color="@color/card_stroke" />
        </shape>
    </item>
</layer-list>

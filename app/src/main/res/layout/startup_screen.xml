<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/my_icon_high_res_blue"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background_startup_screen" />

    <TextView
        android:id="@+id/welcome_text"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"

        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:shadowColor="@color/text_disabled"
        android:shadowRadius="5"
        android:text="@string/welcome_message"

        android:textColor="@color/black"
        android:textSize="@dimen/text_size_xxl"
        android:textStyle="bold"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tap_to_start_text"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_md"
        android:gravity="center"

        android:text="@string/tap_to_start"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/text_size_lg"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text"
        app:layout_constraintBottom_toTopOf="@+id/ciis_project_text"/>

    <TextView
        android:id="@+id/ciis_project_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxl"
        android:layout_marginBottom="@dimen/spacing_xxl"
        android:text="@string/ciis_project_subtitle"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_md"
        android:alpha="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tap_to_start_text" />


</androidx.constraintlayout.widget.ConstraintLayout>
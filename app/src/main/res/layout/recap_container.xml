<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/general_list_item_background"
    android:padding="@dimen/spacing_lg">

    <!-- Recap Header -->
    <View
        android:id="@+id/recap_indicator"
        android:layout_width="@dimen/spacing_xs"
        android:layout_height="0dp"
        android:background="@color/accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recap_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_md"
        android:text="@string/recap"
        android:textColor="@color/accent_light"
        android:textSize="@dimen/text_size_sm"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recap_indicator"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/wrapped_container_frame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_marginTop="@dimen/spacing_sm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recap_indicator"
        app:layout_constraintTop_toBottomOf="@+id/recap_title" />

</androidx.constraintlayout.widget.ConstraintLayout>

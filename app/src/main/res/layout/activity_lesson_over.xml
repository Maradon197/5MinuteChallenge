<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xl">

        <TextView
            android:id="@+id/title_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xxl"

            android:text="@string/lesson_complete"
            android:textColor="@color/success"
            android:textSize="@dimen/text_size_xxl"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/trophy_icon"

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/spacing_lg"

            android:background="@drawable/card_elevated"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text" />

        <TextView
            android:id="@+id/score_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"

            android:text="@string/your_score"
            android:textColor="@color/score_gold"
            android:textSize="@dimen/text_size_xxxl"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trophy_icon" />

        <LinearLayout
            android:id="@+id/stats_container"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"

            android:orientation="vertical"
            android:background="@drawable/card_elevated"
            android:padding="@dimen/spacing_lg"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/score_text">

            <TextView
                android:id="@+id/base_points_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_md"
                android:padding="@dimen/spacing_sm"
                android:visibility="gone" />

            <TextView
                android:id="@+id/accuracy_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_lg"
                android:padding="@dimen/spacing_sm" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginVertical="@dimen/spacing_sm" />

            <TextView
                android:id="@+id/streak_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_lg"
                android:padding="@dimen/spacing_sm" />

            <View
                android:id="@+id/divider_bonus"

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginVertical="@dimen/spacing_sm"
                android:visibility="gone" />

            <TextView
                android:id="@+id/time_bonus_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bonus_purple"
                android:textSize="@dimen/text_size_md"
                android:textStyle="bold"
                android:padding="@dimen/spacing_sm"
                android:visibility="gone" />

            <TextView
                android:id="@+id/accuracy_bonus_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bonus_purple"
                android:textSize="@dimen/text_size_md"
                android:textStyle="bold"
                android:padding="@dimen/spacing_sm"
                android:visibility="gone" />

        </LinearLayout>

        <Button
            android:id="@+id/continue_button"

            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_xl"
            android:background="@drawable/button_primary"
            android:text="@string/continue_to_next"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_md"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stats_container" />

        <Button
            android:id="@+id/back_to_topics_button"

            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_md"
            android:background="@drawable/button_secondary"
            android:text="@string/back_to_topics"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_md"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/continue_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
